    [DesignRange( 1, 100 )]
    [ValueRange( 0, $FFFF )]
    [MinValue( 1 )]
    [ NamePostfix( '(uS)' ) ]
    PingTime : Unsigned = 2

    [DesignRange( 0, 10000 )]
    [ValueRange( 0, $FFFF )]
    [MinValue( 0 )]
    [ NamePostfix( '(mS)' ) ]
    PauseTime : Unsigned = 100

  ;
